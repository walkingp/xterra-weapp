.container {
	padding: 0;
}

.header {
	z-index: 9;
	background-color: #fff;
	position: fixed;
	top: 0;
	width: 100%;
	display: flex;
	align-items: flex-end;
	justify-content: center;
	padding-bottom: 10rpx;
}

.header image {
	height: 50rpx;
}

.main {
	min-height: 100vh;
	overflow: auto !important;
}

.swiper {
	position: relative;
	height: 940rpx;
}

.swiper swiper {
	height: 100%;
}

.swiper .swiper-item {
	position: relative;
	height: 100%;
	overflow: hidden;
}

.swiper button {
	position: absolute;
	left: 50%;
	bottom: 100rpx;
	transform: translateX(-50%);
	background-color: transparent;
	border: solid 4rpx #fff !important;
	color: #fff !important;
	border-radius: 0px;
}

button.button {
	border: solid 4rpx #444;
	height: 74rpx;
	padding: 0 50rpx!important;
	color: #444;
	border-radius: 0;
	background-color: transparent;
}

.swiper-item image {
	height: 100%;
	width: 100%;
}

.city {
	padding: 32rpx;
	padding-bottom: 44rpx;
	background-color: #fff;
}

.city image {
	width: 100%;
	margin-bottom: 50rpx;
}

.city .en {
	font-size: 60rpx;
	text-transform: uppercase;
	color: #333;
}

.city .cn,
.city .desc {
	font-size: 28rpx;
	color: #777;
	line-height: 2;
	text-align: center;
}
.city .cn {
	font-weight: bold;
}
.desc{
	padding: 10rpx;
}
.city button {
	margin-top: 40rpx;
}
.city button.button.button-hover{
  font-weight: normal;
}

.list .item {
	position: relative;
}

.list image.cover {
	width: 100vw;
	height: 100vh;
}

.dots {
	left: 50%;
	transform: translateX(-50%);
	display: flex;
	flex-direction: row;
	position: absolute;
	bottom: 40rpx;
}

.dot {
	width: 16rpx;
	height: 16rpx;
	background-color: transparent;
	border: solid 2rpx #fff;
	border-radius: 50%;
}

.dot.active {
	background-color: #fff;
}

.dot+.dot {
	margin-left: 20rpx;
}

.swiper swiper.disabled {
	position: relative;
}

.swiper swiper.disabled::after {
	content: "";
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	z-index: 9;
	background-color: transparent;
}
